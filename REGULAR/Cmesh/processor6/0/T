FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 1;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 1;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      nonuniform 0();
        value           nonuniform 0();
    }
    bottom
    {
        type            slip;
    }
    top
    {
        type            slip;
    }
    obstacle
    {
        type            zeroGradient;
    }
    defaultFaces
    {
        type            empty;
    }
    procBoundary6to0
    {
        type            processor;
        value           uniform 1;
    }
    procBoundary6to7
    {
        type            processor;
        value           uniform 1;
    }
    procBoundary6to12
    {
        type            processor;
        value           uniform 1;
    }
    procBoundary6to13
    {
        type            processor;
        value           uniform 1;
    }
}


